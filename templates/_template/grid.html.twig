{% extends 'base.html.twig' %}

{% block title %}{{parent()}} | {{title|trans}}{% endblock %}

{% block body %}
    {% if posts %}
        <div class="grid mt-3">
            <div class="row">
            {% for post in posts %}
                <div class="col-3 g-3 text-center">
                    <a class="pe-auto post position-relative w-100 h-100" href="{{ post.url }}" target="_blank">
                        <div class="position-relative mx-auto d-block rounded w-100 h-100 bg-dark">
                            {# 
                            <div class="overlay text-start position-absolute w-75 h-100">
                                <div class="post-date bg-primary w-50 px-3"><p class="text-white">{{ post.date|date("m/y") }}</p></div>
                                <div class="post-title bg-light w-100 px-3 py-3"><p class="text-black">{{ post.title|upper }}</p></div>
                            </div>
                            #}  
                            {% if post.image %}
                                {{ easy_media(post.image, 'reference', {'class': 'post-img img-fluid rounded'}) }} {# <img class="post-img img-fluid rounded" src="{{ asset('uploads/images/' ~ post.image) }}"></img> #}
                            {% else %}
                                <div class="post-img img-fluid rounded"></div>
                            {% endif %}
                        </div>
                        
                    </a>
                </div>
            {% endfor %}
            </div>
        </div>
    {% else %}
        <p> No posts have been found </p>
    {% endif %}
{% endblock %}