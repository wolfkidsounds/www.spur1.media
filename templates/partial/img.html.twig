{% set img_width = 'w-100' %}
{% set img_hidth = 'h-100' %}

{% set img_style_rounded_enabled = true %}
{% set img_style_rounded = 'rounded' %}

{% set img_blurry_load_enabled = true %}
{% set img_blurry_load = 'blurry-load' %}

<img 
    class="
        {{ img_width }}
        {{ img_height }}
        {{ img_style }}
        {% if img_style_rounded_enabled %}{{ img_style_rounded }}{% endif %}
        {% if img_blurry_load_enabled %}{{ img_blurry_load }}{% endif %}
        overflow-hidden"

{% if item.Image %}
    src="{{ easy_media_path(item.Image)|imagine_filter('thumbnail_small_grayscale') }}"
    data-large="{{ easy_media_path(item.Image)|imagine_filter('thumbnail_grayscale') }}"
{% else %}
    src="{{ asset('build/images/placeholder.jpg')|imagine_filter('thumbnail_small') }}"
    data-large="{{ asset('build/images/placeholder.jpg')|imagine_filter('thumbnail') }}"
{% endif %}>