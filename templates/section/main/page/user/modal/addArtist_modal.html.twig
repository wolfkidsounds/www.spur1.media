<!-- Add Artist Modal -->
{{ form_start(form) }}
<div class="modal-header animate__animated animate__fadeIn">
    <h1 class="modal-title fs-5" id="addArtistModalLabel">{{ 'Add Artist'|trans }}</h1>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body p-4 animate__animated animate__fadeIn transition">
        <fieldset class="mb-3">
            <div class="form-fieldset-title border-bottom">
                <span class=""><h5>{{ 'General Information'|trans }}</h5></span>
            </div>
            <div class="p-2">
                {{ form_row(form.Name) }}
            </div>
        </fieldset>
        <fieldset class="mb-3">
            <div class="form-fieldset-title border-bottom">
                <span class=""><h5>{{ 'Details'|trans }}</h5></span>
            </div>
            <div class="p-2">
                {{ form_row(form.Image) }}

                <div class="row row-cols-4">
                    {{ form_row(form.ArtistType) }}
                    {{ form_row(form.ActType) }}
                    {{ form_row(form.Gender) }}
                    {{ form_row(form.City) }}
                </div>
            </div>
        </fieldset>
        <fieldset class="mb-3">
            <div class="form-fieldset-title border-bottom">
                <span class=""><h5>{{ 'Groups'|trans }}</h5></span>
            </div>
            <div class="p-2">
                {{ form_row(form.Crews) }}
            </div>
        </fieldset>
</div>
<div class="modal-footer animate__animated animate__fadeIn">
    {{ form_row(form.Cancel) }}
    {{ form_row(form.Submit) }}
</div>
{{ form_end(form) }}